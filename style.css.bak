.box{
    background: rgba(233, 230, 230, 0.322) none repeat scroll 0 0;
    display: block;
    font-size: 18px;
    margin: 120px ;
    padding: 42px !important;
    width: 430px;
    height: 320px;
    box-shadow: 10px 10px 5px gray;
}
.container{
    float: right;
    position: absolute;
    left:540px;
}
.container input[type="text"]{
    position: absolute;
    right:220px;
    height: 40px;
    width: 220px ;
    border: 1px solid #666;
    border-radius: 4px;
}
.container .btn{
    background: #816cfa none repeat scroll 0 0;
    border-radius: 0;
    color: rgb(255, 254, 254);
    display: block;
    float: right;
    font-size: 16px;
    margin-top: 65px;
    margin-right: -40px;
    padding: 15px 0;
    transition: all 0.3s ease 0s;
    width: 165px;
}
.photo img{
    position: absolute;
    top:490px;
    right:300px;
    width: 300px;
}



